@model Usuario

@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-action="Login">

    <p>
        <label asp-for="Login">Login</label>
        <input asp-for=Login>
    </p>

    <p>
        <label asp-for="Senha">Senha</label>
        <input asp-for=Senha type="password">
    </p>

    <p>
        <input type="submit" value="Acessar">
    </p>

</form>

<p>
    @ViewBag.mensagem
</p>
@model List<PacotesTuristicos>

@{
    ViewData["Title"] = "ListarPacotes";
}

<h1>Pacotes Turísticos cadastrados</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Atrativos</th>
            <th>Saida</th>
            <th>Retorno</th>
            <th>Usuario</th>
            <th>Operações</th>

        </tr>
    </thead>

    @foreach (PacotesTuristicos P in Model)
    {
        <tr>
            <td>@P.Id</td>
            <td>@P.Nome</td>
            <td>@P.Origem</td>
            <td>@P.Destino</td>
            <td>@P.Atrativos</td>
            <td>@P.Saida</td>
            <td>@P.Retorno</td>
            <td>@P.Usuario</td>
            <td>
                <a href="/PacotesTuristicos/AlterarPacotes?pct=@P.Id">Alterar | </a>
                <a href="/PacotesTuristicos/ExcluirPacotes?Id=@P.Id">Excluir</a>
            </td>

        </tr>
    }

</table>